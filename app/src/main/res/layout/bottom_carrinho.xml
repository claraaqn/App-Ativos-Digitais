<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button_finalizar"
            android:layout_alignBottom="@+id/button_finalizar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:buttonTint="#010715"
            android:fontFamily="@font/poppins_bold"
            android:text="Tudo"
            android:textColor="#010715"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/valor_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/checkBox"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="4dp"
            android:layout_toStartOf="@+id/button_finalizar"
            android:fontFamily="@font/poppins_bold"
            android:text="R$ 00,00"
            android:textColor="#010715" />

        <Button
            android:id="@+id/button_finalizar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_button_preto_carrinho"
            android:padding="12dp"
            android:text="FINALIZAR"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>
